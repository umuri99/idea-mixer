<%= form_with(model: current_user.favorites.find_by(post_id: @post.id), html: { method: :delete }, local: false, class: "favorite_form") do |f| %>
  <div><%= hidden_field_tag :post_id, @post.id %></div>
  <%= f.button type: "submit" do %>
    <div class="icon-unfavorite"></div>
  <% end %>
<% end %>
