<% provide(:title, "ログイン") %>
<section class="login_area">
  <h2>ログイン</h2>
  <%= render 'layouts/flash' %>
  <%= form_with(url: login_path, scope: :session, local: true, class: "basic_form") do |f| %>

    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>

    <%= f.label :password, "パスワード" %>
    <%= link_to "パスワードをお忘れですか？", new_password_reset_path, class: "blue_link" %>
    <%= f.password_field :password %>

    <%= f.label :remember_me, class: "checkbox" do %>
      <%= f.check_box :remember_me %>
      <span>次回から自動ログイン</span>
    <% end %>

    <%= f.submit "ログイン" %>
  <% end %>

  <p><%= link_to "新規アカウント作成はこちら", signup_path, class: "blue_link" %></p>

</section>
